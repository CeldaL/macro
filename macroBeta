local VirtualUser = game:GetService("VirtualUser")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local isAutoClickerActive = false
local clickInterval = 0.01 -- Ajusta el tiempo entre clicks
local lastClickTime = 0

-- Función para activar o desactivar el auto clicker (sin mensajes)
local function toggleAutoClicker()
    isAutoClickerActive = not isAutoClickerActive
    -- Sin print aquí
end

-- Detecta clicks manuales y tecla F1 para toggle (sin mensajes)
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed then
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            if not isAutoClickerActive then
                isAutoClickerActive = true
                -- Sin print aquí
            end
        elseif input.KeyCode == Enum.KeyCode.F1 then
            toggleAutoClicker()
        end
    end
end)

RunService.RenderStepped:Connect(function(dt)
    if isAutoClickerActive then
        local currentTime = tick()
        if currentTime - lastClickTime >= clickInterval then
            VirtualUser:Button1Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
            VirtualUser:Button1Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
            lastClickTime = currentTime
        end
    end
end)
